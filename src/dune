(library
 (name ogg)
 (public_name ogg)
 (synopsis "OCaml bindings for libogg")
 (wrapped false)
 (install_c_headers ocaml-ogg)
 (foreign_stubs
  (language c)
  (names ogg_stubs)
  (flags
   (:include c_flags.sexp)))
 (c_library_flags
  (:include c_library_flags.sexp)))

(rule
 (targets c_flags.sexp c_library_flags.sexp)
 (action
  (run ./config/discover.exe)))
